<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <View
        android:id="@+id/containerTop"
        style="@style/ContainerTop"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/ic_principal_logo_stockview"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/containerTop"
        />

    <View
        android:id="@+id/ContainerBottomLoginCadastro"
        style="@style/ContainerBottomLoginCadastro"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaoAbrirTelaLogin"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="abrirTelaLogin"
        android:text="@string/entrar"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/containerTop"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaoAbrirTelaCadastro"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="abrirTelaCadastro"
        android:text="@string/cadastre_se"
        app:layout_constraintTop_toBottomOf="@+id/botaoAbrirTelaLogin"
        />

</androidx.constraintlayout.widget.ConstraintLayout>